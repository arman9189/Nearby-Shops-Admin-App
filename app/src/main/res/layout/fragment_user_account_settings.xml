<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="org.nearbyshops.serviceprovider.Settings.SettingsActivity$PlaceholderFragment">


        <Switch
            android:id="@+id/switch_end_user_account"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_alignTop="@id/switch_end_user_account"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/switch_end_user_account"
            android:layout_toLeftOf="@id/switch_end_user_account"
            android:text="End User account enabled by default"
            android:id="@+id/end_user_account_enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/user_account_enabled_description"
            android:textColor="#88000000"
            android:layout_alignLeft="@id/end_user_account_enabled"
            android:layout_alignRight="@id/end_user_account_enabled"
            android:layout_marginTop="5dp"
            android:layout_below="@id/end_user_account_enabled"
            android:text="(When new End User account is created the account will be enabled automatically without the explicit approval of the administrator.)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <Switch
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_below="@id/user_account_enabled_description"
            android:id="@+id/switch_distributor_account"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="20sp"
            android:layout_alignTop="@id/switch_distributor_account"
            android:layout_toLeftOf="@id/switch_distributor_account"
            android:layout_below="@id/end_user_account_enabled"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Distributor account enabled by default."
            android:id="@+id/distributor_enabled_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#88000000"
            android:layout_alignLeft="@id/distributor_enabled_default"
            android:layout_alignRight="@id/distributor_enabled_default"
            android:layout_marginTop="5dp"
            android:layout_below="@id/distributor_enabled_default"
            android:text="(When new distributor account is created the account will be enabled automatically without the explicit approval of the administrator.)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>