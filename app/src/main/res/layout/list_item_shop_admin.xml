    <android.support.constraint.ConstraintLayout
        android:layout_margin="2.5dp"
        android:background="@color/white"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp">


        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.35"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="98dp" />

        <TextView
            android:layout_marginTop="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:paddingTop="5dp"
            android:id="@+id/shop_admin_id"
            android:text="ID : 345"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/guideline"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginTop="2dp"
            android:id="@+id/shop_admin_name"
            android:text="Shop admin Name"
            app:layout_constraintRight_toRightOf="@+id/shop_admin_id"
            app:layout_constraintTop_toBottomOf="@+id/shop_admin_id"
            app:layout_constraintLeft_toLeftOf="@+id/shop_admin_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


        <TextView
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="2dp"
            android:id="@+id/phone_number"
            app:layout_constraintTop_toBottomOf="@+id/shop_admin_name"
            app:layout_constraintLeft_toLeftOf="@+id/shop_admin_id"
            app:layout_constraintRight_toRightOf="@+id/shop_admin_id"
            android:text="9490523891"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginTop="2dp"
            android:text="designation"
            app:layout_constraintRight_toRightOf="@+id/shop_admin_id"
            app:layout_constraintLeft_toLeftOf="@+id/shop_admin_id"
            app:layout_constraintTop_toBottomOf="@+id/phone_number"
            android:id="@+id/designation"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />



        <TextView
            android:visibility="gone"
            android:maxLines="2"
            android:layout_marginTop="5dp"
            android:text="Introduction about shop admin. Some more introduction which can extend upto three lines"
            app:layout_constraintRight_toRightOf="@+id/shop_admin_id"
            app:layout_constraintLeft_toLeftOf="@+id/shop_admin_id"
            app:layout_constraintTop_toBottomOf="@+id/designation"
            android:id="@+id/about"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:background="#88000000"
            android:id="@+id/border_one"
            app:layout_constraintTop_toBottomOf="@+id/about"
            app:layout_constraintRight_toRightOf="@id/shop_admin_id"
            app:layout_constraintLeft_toLeftOf="@id/shop_admin_id"
            android:layout_width="0dp"
            android:layout_height="1dp" />



        <ImageView
            android:layout_marginTop="0dp"
            android:padding="5dp"
            android:id="@+id/edit_icon"
            app:layout_constraintTop_toBottomOf="@+id/border_one"
            app:layout_constraintLeft_toLeftOf="@id/shop_admin_id"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_edit_black_48px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/edit_text"
            android:gravity="bottom"
            app:layout_constraintBottom_toBottomOf="@+id/edit_icon"
            app:layout_constraintTop_toTopOf="@+id/edit_icon"
            app:layout_constraintLeft_toRightOf="@+id/edit_icon"
            android:text="Edit"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />


        <ImageView
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:scaleType="centerCrop"
            android:background="@color/buttonColor"
            android:id="@+id/shop_admin_profile_image"
            app:layout_constraintBottom_toBottomOf="@+id/edit_icon"
            app:layout_constraintTop_toTopOf="@+id/shop_admin_id"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintRight_toLeftOf="@+id/guideline" />




    </android.support.constraint.ConstraintLayout>


