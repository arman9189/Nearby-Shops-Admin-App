<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_item"
    android:padding="5dp">



    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_percent="0.35"
        android:orientation="vertical" />


    <ImageView
        android:scaleType="centerCrop"
        android:background="@color/backgroundTinted"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/profile_picture"
        app:layout_constraintDimensionRatio="H,4:4"
        android:layout_width="0dp"
        android:layout_height="0dp" />


    <LinearLayout
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_marginTop="0dp"
            android:text="Staff User ID : 13"
            android:id="@+id/staff_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
        <TextView
            android:layout_marginTop="3dp"
            android:background="#55000000"
            android:layout_width="match_parent"
            android:layout_height="0.3dp" />


        <!--<TextView-->
            <!--android:layout_marginTop="3dp"-->
            <!--android:textSize="12sp"-->
            <!--android:text="Driven by"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->


        <TextView
            android:layout_marginTop="0dp"
            android:textSize="17sp"
            android:text="Sumeet Kumar"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:textSize="15sp"
            android:layout_marginTop="3dp"
            android:text="Head Consumer Relationships"
            android:id="@+id/designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:textSize="13sp"
            android:layout_marginTop="3dp"
            android:text="Distance : 6.34 Km"
            android:id="@+id/distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="17sp"
                android:text="Phone : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="17sp"
                android:layout_marginTop="3dp"
                android:text="9490523891"
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>