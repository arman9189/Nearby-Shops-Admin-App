<?xml version="1.0" encoding="utf-8"?>



<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardCornerRadius="0dp"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemCategoryListItem"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="Item Name"
                android:textSize="24sp"
                android:id="@+id/categoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="@+id/categoryName"
                app:layout_constraintBottom_toBottomOf="@+id/categoryName"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/more_options"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:srcCompat="@drawable/ic_more_vert_black_48px" />
        
        
            <TextView
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:background="@color/black"
                app:layout_constraintRight_toLeftOf="@+id/more_options"
                app:layout_constraintBottom_toBottomOf="@+id/categoryName"
                app:layout_constraintTop_toTopOf="@+id/categoryName"
                android:layout_width="0dp"
                android:layout_height="0dp" />


            <TextView
                android:id="@+id/border_one"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/categoryName"
                android:background="@color/black"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="0dp"
                android:layout_height="0dp" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide"
                app:layout_constraintGuide_percent="0.35"
                android:orientation="vertical"
                android:layout_height="0dp"
                android:layout_width="0dp" />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <ImageView
                android:background="#66000000"
                android:layout_marginTop="5dp"
                app:layout_constraintRight_toRightOf="@id/guide"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/border_one"
                android:id="@+id/categoryImage"
                android:scaleType="centerCrop"
                android:layout_width="0dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/ic_nature_people_white_48px"
                tools:layout_editor_absoluteX="5dp" />







