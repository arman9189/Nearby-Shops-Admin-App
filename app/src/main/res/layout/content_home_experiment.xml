<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


<!--
android:id="@+id/addRemoveItemsButton"

android:id="@+id/addStockButton"

-->

<!--
 android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"   -->




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


            <RelativeLayout
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:id="@+id/option_add_items"
                android:background="@color/phonographyBlue"
                android:layout_width="@dimen/menu_item_width"
                android:layout_height="@dimen/menu_item_width">

                <ImageView
                    app:srcCompat="@drawable/ic_nature_people_white_48px"
                    android:tint="#ffffff"
                    android:padding="10dp"
                    android:layout_above="@+id/text_add_items"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <TextView
                    android:padding="10dp"
                    android:id="@+id/text_add_items"
                    android:textSize="@dimen/menu_item_text_size"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#ffffff"
                    android:text="Item Categories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>




            <RelativeLayout
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:layout_below="@id/borderOne"
                android:id="@+id/option_add_stock"
                android:background="@color/gplus_color_1"
                android:layout_width="@dimen/menu_item_width"
                android:layout_height="@dimen/menu_item_width">

                <ImageView
                    android:scaleType="centerCrop"
                    android:tint="#ffffff"
                    android:padding="10dp"
                    android:layout_above="@+id/text_add_stock"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <TextView
                    android:padding="10dp"
                    android:id="@+id/text_add_stock"
                    android:textSize="@dimen/menu_item_text_size"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#ffffff"
                    android:text="Detached Items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>




            <RelativeLayout
                android:layout_marginLeft="5dp"
                android:id="@+id/shop_home_quick_stock_editor"
                android:background="@color/gplus_color_2"
                android:layout_weight="1"
                android:layout_width="@dimen/menu_item_width"
                android:layout_height="@dimen/menu_item_width">

                <ImageView
                    android:tint="#ffffff"
                    android:padding="10dp"
                    android:layout_above="@+id/text_quick_stock_editor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:gravity="right"
                    android:padding="10dp"
                    android:id="@+id/text_quick_stock_editor"
                    android:textSize="@dimen/menu_item_text_size"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#ffffff"
                    android:text="Detached Item Categories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_marginRight="10dp"
                android:id="@+id/option_orders"
                android:background="@color/colorPrimaryDark"
                android:layout_weight="1"
                android:layout_width="@dimen/menu_item_width"
                android:layout_height="@dimen/menu_item_width">

                <ImageView
                    android:tint="#ffffff"
                    android:padding="10dp"
                    android:layout_above="@+id/text_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:padding="10dp"
                    android:id="@+id/text_cancel"
                    android:textSize="@dimen/menu_item_text_size"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#ffffff"
                    android:text="Suggested Items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/option_suggested_categories"
                android:background="@color/gplus_color_4"
                android:layout_weight="1"
                android:layout_width="@dimen/menu_item_width"
                android:layout_height="@dimen/menu_item_width">

                <ImageView
                    android:tint="#ffffff"
                    android:padding="10dp"
                    android:layout_above="@+id/text_item_category_updates"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:padding="10dp"
                    android:id="@+id/text_item_category_updates"
                    android:textSize="@dimen/menu_item_text_size"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#ffffff"
                    android:text="Suggested Item Categories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>




        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/borderthree"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/row_two"
            android:background="#88000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>



            <RelativeLayout
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:id="@+id/option_settings"
                android:background="@color/blueGrey800"
                android:layout_width="@dimen/menu_item_width"
                android:layout_height="@dimen/menu_item_width">

                <ImageView
                    android:padding="10dp"
                    android:layout_above="@+id/text_shop_stats"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <TextView
                    android:gravity="right"
                    android:padding="10dp"
                    android:id="@+id/text_shop_stats"
                    android:textSize="@dimen/menu_item_text_size"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#ffffff"
                    android:text="Current Service Configuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>




            <RelativeLayout
                android:layout_marginLeft="5dp"
                android:id="@+id/option_saved_configuration"
                android:background="@color/cyan900"
                android:layout_weight="1"
                android:layout_width="@dimen/menu_item_width"
                android:layout_height="@dimen/menu_item_width">

                <ImageView
                    android:scaleType="centerCrop"
                    android:tint="#ffffff"
                    android:padding="10dp"
                    android:layout_above="@+id/text_saved_configurations"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:padding="10dp"
                    android:id="@+id/text_saved_configurations"
                    android:textSize="@dimen/menu_item_text_size"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#ffffff"
                    android:text="Saved Configuration's"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>




        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/bordertwo"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/row_three"
            android:background="#88000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>



            <RelativeLayout
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:id="@+id/option_service_stats"
                android:background="@color/blueGrey800"
                android:layout_width="@dimen/menu_item_width"
                android:layout_height="@dimen/menu_item_width">

                <ImageView
                    android:padding="10dp"
                    android:layout_above="@+id/text_service_stats"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <TextView
                    android:padding="10dp"
                    android:id="@+id/text_service_stats"
                    android:textSize="@dimen/menu_item_text_size"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#ffffff"
                    android:text="Service Stats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>




            <RelativeLayout
                android:layout_marginLeft="5dp"
                android:id="@+id/option_billing"
                android:background="@color/cyan900"
                android:layout_weight="1"
                android:layout_width="@dimen/menu_item_width"
                android:layout_height="@dimen/menu_item_width">

                <ImageView
                    android:scaleType="centerCrop"
                    android:tint="#ffffff"
                    android:padding="10dp"
                    android:layout_above="@+id/text_billing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:padding="10dp"
                    android:id="@+id/text_billing"
                    android:textSize="@dimen/menu_item_text_size"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#ffffff"
                    android:text="Billing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>




            <RelativeLayout
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:id="@+id/option_comments_messages"
                android:background="@color/blueGrey800"
                android:layout_width="@dimen/menu_item_width"
                android:layout_height="@dimen/menu_item_width">

                <ImageView
                    android:padding="10dp"
                    android:layout_above="@+id/text_comments_messages"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <TextView
                    android:padding="10dp"
                    android:id="@+id/text_comments_messages"
                    android:textSize="@dimen/menu_item_text_size"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#ffffff"
                    android:text="Comments and Messages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/border_six"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/row_five"
            android:background="#88000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>



            <RelativeLayout
                android:layout_toRightOf="@id/option_comments_messages"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:id="@+id/option_reported_complaints"
                android:background="@color/gplus_color_4"
                android:layout_width="@dimen/menu_item_width"
                android:layout_height="@dimen/menu_item_width">

                <ImageView
                    android:padding="10dp"
                    android:layout_above="@+id/text_reported_complaints"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <TextView
                    android:padding="10dp"
                    android:id="@+id/text_reported_complaints"
                    android:textSize="@dimen/menu_item_text_size"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#ffffff"
                    android:text="Reported Complaints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>




            <RelativeLayout
                android:layout_toRightOf="@id/option_reported_complaints"
                android:layout_marginLeft="5dp"
                android:id="@+id/option_shop_approvals"
                android:background="@color/cyan900"
                android:layout_weight="1"
                android:layout_width="@dimen/menu_item_width"
                android:layout_height="@dimen/menu_item_width">

                <ImageView
                    android:scaleType="centerCrop"
                    android:tint="#ffffff"
                    android:padding="10dp"
                    android:layout_above="@+id/text_shop_approvals"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:padding="10dp"
                    android:id="@+id/text_shop_approvals"
                    android:textSize="@dimen/menu_item_text_size"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#ffffff"
                    android:text="Shop Approvals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>


    </RelativeLayout>





</ScrollView>