<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="2.5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.Guideline
        android:id="@+id/vertical_guide"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_percent="0.4"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp" />


    <TextView
        android:layout_margin="5dp"
        android:background="@color/gplus_color_2"
        android:textColor="@color/white"
        android:id="@+id/title_item_spec"
        android:textSize="24sp"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Item Specification Value"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />


    <ImageView
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/more_options"
        app:layout_constraintTop_toTopOf="@id/title_item_spec"
        app:layout_constraintBottom_toBottomOf="@id/title_item_spec"
        app:layout_constraintRight_toRightOf="@id/title_item_spec"
        app:srcCompat="@drawable/ic_more_vert_black_48px"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />


    <ImageView
        android:layout_marginBottom="5dp"
        android:scaleType="centerCrop"
        android:background="#22000000"
        android:id="@+id/image_item_spec"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/title_item_spec"
        app:layout_constraintLeft_toLeftOf="@id/title_item_spec"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/vertical_guide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,4:3" />

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:id="@+id/item_count"
        app:layout_constraintLeft_toRightOf="@id/image_item_spec"
        app:layout_constraintTop_toTopOf="@id/image_item_spec"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Item Count : 23"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/description"
        android:text="sample text description for item spec name. Another line in this sample text"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintLeft_toRightOf="@id/image_item_spec"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_count"
        app:layout_constraintBottom_toBottomOf="@id/image_item_spec"
        android:layout_width="0dp"
        android:layout_height="0dp" />

</android.support.constraint.ConstraintLayout>


